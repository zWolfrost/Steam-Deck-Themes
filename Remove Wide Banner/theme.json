{
	"name": "Remove Wide Banner",
	"author": "zWolfrost",
	"target": "Tweak",
	"version": "v2.2",
	"description": "This theme will replace the wide capsule banner of the last played game aka featured game with a capsule.",
	"manifest_version": 5,
	"inject": {
		"shared.css": [
			"bigpicture"
		]
	},
	"dependencies": {},
	"patches": {
		"Image Fit": {
			"type": "dropdown",
			"default": "Cover",
			"values": {
				"Cover": {
					"image-fit-cover.css": [
						"bigpicture"
					]
				},
				"Fill": {
					"image-fit-fill.css": [
						"bigpicture"
					]
				},
				"Contain": {
					"image-fit-contain.css": [
						"bigpicture"
					]
				}
			},
			"components": []
		}
	}
}
