{
	"name": "Remove Wide Banner",
	"author": "zWolfrost",
	"target": "Tweak",
	"version": "v3.0",
	"description": "This theme will replace the banner of the last played game aka featured game with a capsule or a square, depending on your preference.",
	"manifest_version": 5,
	"inject": {
		"shared.css": [
			"bigpicture"
		]
	},
	"dependencies": {},
	"patches": {
		"Image Fit": {
			"type": "dropdown",
			"default": "Cover",
			"values": {
				"Cover": {
					"--RWB-image-fit": ["cover", "bigpicture"]
				},
				"Fill": {
					"--RWB-image-fit": ["fill", "bigpicture"]
				},
				"Contain": {
					"--RWB-image-fit": ["contain", "bigpicture"]
				}
			},
			"components": []
		},
		"Final Shape": {
			"type": "dropdown",
			"default": "Capsule",
			"values": {
				"Capsule": {
					"--RWB-end-width": ["133px", "bigpicture"]
				},
				"Square": {
					"--RWB-end-width": ["199.5px", "bigpicture"]
				},
				"Banner": {
					"--RWB-end-width": ["426.837px", "bigpicture"]
				}
			}
	   }
	}
}
